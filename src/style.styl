.__quiz__
  border 1px solid #ccc
  padding 20px
  margin 20px 0
  .__quiz_head__
    font-size 2rem
  .__quiz_sol__
    display inline-block
    font-size 1.2rem;
    margin-left 20px;
  label
    display -webkit-flex
    display flex
    cursor pointer
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    user-select none
    p
      margin 0
      padding 0
      flex 1
      color rgb(136, 136, 136)
      transition color .1s
      &:hover
        color rgb(102, 102, 102)
        transition color .1s
    input[type=radio]
      -webkit-appearance none
      appearance none
      width 1rem
      height 1rem
      border-radius 50%
      border 1px solid #ccc
      position relative
      cursor pointer
      transition all .1s
      line-height normal
      vertical-align middle
      margin 0.2rem 5px
      display inline-block
      box-sizing border-box
      &:after
        content ""
        width .5rem
        height .5rem
        position absolute
        left .1875rem
        top .1875rem
        background-color transparent
        border-radius 50%
        transform scale(0, 0)
        transition all .1s
      &:hover
        border-color #ed5f82
        transition all .1s
      &:checked
        border-color #ed5f82
        &:after
          background-color #ed5f82
          transform scale(1, 1)
          transition all .1s
    input[type=checkbox]
      cursor pointer
      position relative
      -webkit-appearance none
      -moz-appearance none
      appearance none
      width 1rem
      height 1rem
      border 1px solid #ccc
      padding 0
      line-height normal
      transition all .1s
      vertical-align top
      margin .2rem 5px
      display inline-block
      box-sizing border-box
      &:checked
        background #ed5f82
        border-color #ed5f82
        transition all .1s
        &:after
          opacity 1
          transform rotate(-45deg)
          transition all .1s
      &:after
        box-sizing border-box
        content ""
        width .625rem
        height .375rem
        position absolute
        top .1875rem
        left .125rem
        border 2px solid #fff
        border-top none
        border-right none
        background transparent
        transform rotate(-65deg) scale(.5)
        opacity 0
        transition all .1s
      &:hover
        border-color #ed5f82
        transition all .1s
    input:focus
      outline none
  button.__quiz_btn__
    font-size 1.2rem
    background-color #009933
    padding 5px 20px
    border none
    outline none
    cursor pointer
    margin-top 20px
    color #fff
    border-radius 5px
    transition all .2s
    &:hover
      background-color #00802b
      transition all .2s
    &:active
      box-shadow inset 0 0 10px #444
      text-shadow 0 0 10px #444